<section style="padding: 60px 20px; background: #ffffff;">
  <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(240px, 1fr)); gap: 40px; max-width: 1200px; margin: auto;">
    
    <div style="text-align: center;">
      <a href="/collections/men-gold">
        <img src="{{ 'men-gold.jpg' | asset_url }}" alt="Men's Gold" style="width: 100%; border-radius: 16px;">
        <h3 style="margin-top: 10px;">Men’s Gold</h3>
      </a>
    </div>

    <div style="text-align: center;">
      <a href="/collections/men-plated">
        <img src="{{ 'men-plated.jpg' | asset_url }}" alt="Men's Gold-Plated" style="width: 100%; border-radius: 16px;">
        <h3 style="margin-top: 10px;">Men’s Gold-Plated</h3>
      </a>
    </div>

    <div style="text-align: center;">
      <a href="/collections/men-steel">
        <img src="{{ 'men-steel.jpg' | asset_url }}" alt="Men's Steel" style="width: 100%; border-radius: 16px;">
        <h3 style="margin-top: 10px;">Men’s Stainless Steel</h3>
      </a>
    </div>

    <div style="text-align: center;">
      <a href="/collections/women-plated">
        <img src="{{ 'women-plated.jpg' | asset_url }}" alt="Women's Gold-Plated" style="width: 100%; border-radius: 16px;">
        <h3 style="margin-top: 10px;">Women’s Gold-Plated</h3>
      </a>
    </div>

  </div>
</section>
<section style="padding: 60px 20px; background-color: #f8f8f8;">
  <div style="max-width: 1200px; margin: auto; text-align: center;">
    <h2 style="font-size: 2rem; margin-bottom: 40px;">Featured Pieces</h2>
    {% section 'featured-collection' %}
  </div>
</section>

